<div class="contracts-content">
    <div class="contracts-panel">
        <div id="contracts-table"></div>
        <button class="contract-button hidden" id="delete-contracts"><i class="fa-regular fa-trash-can"></i></button>
    </div>
</div>

<div id="contract-modal" class="modal-box contract">
	<header>
		<h3 id="contract-modal-title">Modifier les modalités de contrat</h3>
	</header>
	<div class="modal-body">
        <div class="form-group">
            <label for="qtt">Quantité à livrer<span class="obligato"></span></label>
            <input type="number" class="contract-modal-input" name="qtt" id="qtt" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="freq">Nombre de livraisons par mois<span class="obligato"></span></label>
            <input class="contract-modal-input" name="freq" id="freq" type="number" autocomplete="off"/>
        </div>
        <div class="form-group">
            <label for="dateFin">Date de fin de contrat<span class="obligato"></span></label>
            <input class="contract-modal-input" name="dateFin" id="dateFin" type="date" onchange="checkModalInputs();" autocomplete="off"/>
        </div>
    </div>
    <footer>
        <a href="#" id="modify_contract-cancel" class="js-modal-no">Annuler</a>
        <button id="modify_contract" class="formSubmit">Valider</button>
    </footer>
</div>